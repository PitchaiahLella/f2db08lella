extends layout 

block content 
  h1= title 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let shoe_id = toShow.shoe_id 
    - let Shoe_Name = toShow.Shoe_Name 
    - let Shoe_Company = toShow.Shoe_Company 
    - let Shoe_Size = toShow.Shoe_Size 
    - let actionid = "/resource/shoe/" + shoe_id 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='shoeAttr mr-3') shoe ID is: 
        div #{shoe_id} 
      div.row 
        div(class='shoeAttr mr-3') shoe Name is: 
        div #{Shoe_Name} 
      div.row 
        div(class='shoeAttr mr-3') shoe Company  is: 
        div #{Shoe_Company} 
      div.row 
        div(class='shoeAttr mr-3') shoe Size is: 
        div #{Shoe_Size}
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
  script. 
    function cancel() { 
      // Go back to the home page for the shoe collection 
      window.location.href='/shoe' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      // Don't need a body for the delete 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/shoe' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    }